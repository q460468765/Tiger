<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="660pt"
        android:layout_height="560pt"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="660pt"
            android:layout_height="560pt"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_1"
                android:layout_width="130pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="116pt"
                android:layout_marginTop="78pt" />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_2"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22pt"
                android:layout_marginTop="78pt" />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_3"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22pt"
                android:layout_marginTop="78pt" />


        </LinearLayout>


        <ImageView
            android:layout_width="660pt"
            android:layout_height="560pt"
            android:background="@mipmap/back_tiger" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"/>

    <Button
        android:id="@+id/btn_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"/>
</LinearLayout>
